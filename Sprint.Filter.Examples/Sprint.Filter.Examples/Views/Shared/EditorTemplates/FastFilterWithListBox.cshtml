@model Sprint.Filter.IFilterView
@{
    Layout = null;
    ViewData["Values"] = Model.Values.FirstOrDefault();
}
<dl>
    <dt>
        <label>@Model.Title</label>
    </dt>    
    <dd>
        @Html.DropDownListFor(x=>x.Values,Model.Dictionary,"", new { @class = "input-medium" })
    </dd>
    @Html.HiddenFor(x=>x.TypeName)
    @Html.HiddenFor(x=>x.ConditionKey)
</dl>