@using System.Text
@using Sprint.Extensions
@{
    var sb = new StringBuilder();
    if(ViewData.ModelMetadata.IsRequired)
    {
        sb.Append("required");
        if (Convert.ToString(ViewData.TemplateInfo.FormattedModelValue).HasValue())
        {
            sb.Append(" valid");
        }
    }
    sb.Append(" span6 text");
    var attributes = Html.GetUnobtrusiveValidationAttributes(ViewData.ModelMetadata.PropertyName, ViewData.ModelMetadata);
    attributes.Add("class", sb.ToString());    
}
@Html.TextBox("", ViewData.TemplateInfo.FormattedModelValue, attributes)