<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>@ViewBag.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        @Styles.Render("~/Content/bootstrap")
        @Styles.Render("~/Content/themes/base/css")
        @Styles.Render("~/Content/css")
        @RenderSection("Styles", false)
    </head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="#">Sprint.Filter Demo</a>
                    <div class="nav-collapse collapse">
                        @{
                            var controller = ViewContext.RouteData.Values["controller"].ToString();
                        }
                        <ul class="nav">
                            <li class="@(controller=="SimpleFilter"?"active":"")">@Html.ActionLink("Simple filter","Index","SimpleFilter")</li>
                            <li class="@(controller=="MultipleConditionsFilter"?"active":"")">@Html.ActionLink("Multiple conditions filter","Index","MultipleConditionsFilter")</li>
                            <li class="@(controller=="PersistentFilter"?"active":"")">@Html.ActionLink("Persistent filter","Index","PersistentFilter")</li>
                            <li class="@(controller=="SaveLoadFilter"?"active":"")">@Html.ActionLink("Save/Load filter","Index","SaveLoadFilter")</li>  
                            <li class="@(controller=="SprintGridWithFilter"?"active":"")">@Html.ActionLink("Sprint.Grid With Filter","Index","SprintGridWithFilter")</li>                          
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        @RenderBody()
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/scripts")
        @RenderSection("Scripts", false)
    </body>
</html>

